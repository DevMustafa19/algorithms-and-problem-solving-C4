static bool IsAccepted(strDriverDetails Driver)
{
	if (Driver.HasRecommendation)
	{
		return true;
	}
	else
	{
		return ((Driver.Age >= 21 && Driver.HasDriverLicense) || (Driver.HasRecommendation));
	}
}


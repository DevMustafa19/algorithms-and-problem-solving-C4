Algorithm NO. 38

enum enPrimeNotPrime { Prime = 1, NotPrime = 2 };

int ReadPositiveNum(string Message)
{
    int Num = 0;
    do
    {
        cout << Message;
        cin >> Num;
    } while (Num <= 0);
    return Num;
}

enPrimeNotPrime checkPrimeNotPrime(int Num)
{
    if (Num < 2)
    {
        return enPrimeNotPrime::NotPrime;
    }

    int Half = round(Num / 2);

    for (int Counter = 2; Counter <= Half; Counter++)
    {
        if (Num % Counter == 0)
        {
            return enPrimeNotPrime::NotPrime;
        }
        return enPrimeNotPrime::Prime;
    }
}

void PrintNumType(int Num)
{
    switch (checkPrimeNotPrime(Num))
    {
    case enPrimeNotPrime::Prime:
        cout << "Is prime. ";
        break;
    case enPrimeNotPrime::NotPrime:
        cout << "Is not prime. ";
        break;
    }
}

int main()
{
    PrintNumType(ReadPositiveNum("Pls enter positive number : "));
    return 0;  
}

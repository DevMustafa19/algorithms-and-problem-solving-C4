using namespace std;

enum enNumType { Odd = 1, Even = 2 };

static int ReadNum()
{
	int Num;
	cout << "Please enter the number : ";
	cin >> Num;
	return Num;
}

static enNumType CheckNumberType(int Num)
{
	int Reasult = Num % 2;
	if (Reasult == 0)
	{
		return enNumType::Even;
    }
	else
	{
		return enNumType::Odd;
	}
}

static void PrintNum(enNumType NumType)
{
	if (NumType==enNumType::Even)
	{
		cout << " Its even number";
	}
	else
	{
		cout << " Its odd number";
	}
}

int main()
{
	PrintNum(CheckNumberType(ReadNum()));
	return 0;
}

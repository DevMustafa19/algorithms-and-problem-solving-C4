enum enMonth 
{
    Jan = 1, Feb = 2, Mar = 3, 
    Apr = 4, May = 5, Jun = 6,
    Jul = 7, Aug = 8, Sep = 9,
    Oct = 10, Nov = 11, Dec = 12
};


int ReadNumInRange(string Message, int From, int To)
{
    int Num = 0;
    do
    {
        cout << Message;
        cin >> Num;
    } while (Num < From || Num > To);
    return Num;
}

enMonth ReadDay()
{
   return (enMonth)ReadNumInRange
   ("Pls choose a number (1 - 12) : ",1,12);
}

string GetDay(enMonth Day)
{
    switch (Day)
    {
    case enMonth::Jan:
        return "Its January.";
    case enMonth::Feb:
        return "Its February.";
    case enMonth::Mar:
        return "Its March.";
    case enMonth::Apr:
        return "Its April.";
    case enMonth::May:
        return "Its May.";
    case enMonth::Jun:
        return "Its June.";
    case enMonth::Jul:
        return "Its July.";
    case enMonth::Aug:
        return "Its August.";
    case enMonth::Sep:
        return "Its September.";
    case enMonth::Oct:
        return "Its October.";
    case enMonth::Nov:
        return "Its November.";
    case enMonth::Dec:
        return "Its December.";
    default:
        return "Not a valid month";
    }

}

int main()
{
    cout << GetDay(ReadDay());
    return 0;
}

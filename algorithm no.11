using namespace std;
enum enPassFail { Pass = 1, Fail = 2 };

static void Read3Numbers(int& Mark1, int& Mark2, int& Mark3)
{
	cout << "Pls enter a Mark 1 : ";
	cin >> Mark1;

	cout << "Pls enter a Mark 2 : ";
	cin >> Mark2;

	cout << "Pls enter a Mark 3 : ";
	cin >> Mark3;
}

static int CalculatingSumOf3Numbers(int Mark1, int Mark2, int Mark3)
{
	return Mark1 + Mark2 + Mark3;
}

static float CalculatingAveOf3Numbers(int Mark1, int Mark2, int Mark3)
{
	return (float)CalculatingSumOf3Numbers(Mark1, Mark2, Mark3) / 3;
}

enPassFail CheckAverage(float Average)
{
	if (Average >= 50)
		return enPassFail::Pass;
	else
		return enPassFail::Fail;
}

static void Print3Numbers(float Average)
{
	cout << "The average is : " << Average << endl;
	if (CheckAverage(Average)== enPassFail::Pass)
		cout << "\n You Passed" << endl;
	else
		cout << "\n You Failed" << endl;
}

int main()
{

	int Mark1, Mark2, Mark3;
	Read3Numbers(Mark1, Mark2, Mark3);
	Print3Numbers(CalculatingAveOf3Numbers(Mark1, Mark2, Mark3));
	return 0;
}
